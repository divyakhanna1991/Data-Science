"""
Question 2 - Write a python program to generate a to-do-list that performa the following tasks:-

(a) Display a menu
(b) Adding task
(c) Viewing task
(d) Delete task

"""




class ToDoList:
    def __init__(self):
        self.tasks = []

    def display_menu(self):
        print("=== ToDo List Menu ===")
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Delete Task")
        print("4. Exit")

    def add_task(self, task):
        self.tasks.append(task)
        print("Task added successfully.")

    def view_tasks(self):
        if not self.tasks:
            print("No tasks added yet.")
        else:
            print("Tasks:")
            for i, task in enumerate(self.tasks, start=1):
                print(f"{i}. {task}")

    def delete_task(self, task_index):
        if task_index < 1 or task_index > len(self.tasks):
            print("Invalid task index.")
        else:
            del self.tasks[task_index - 1]
            print("Task deleted successfully.")

def main():
    todo_list = ToDoList()

    while True:
        todo_list.display_menu()
        choice = input("Enter your choice: ")

        if choice == '1':
            task = input("Enter task: ")
            todo_list.add_task(task)
        elif choice == '2':
            todo_list.view_tasks()
        elif choice == '3':
            task_index = int(input("Enter index of task to delete: "))
            todo_list.delete_task(task_index)
        elif choice == '4':
            print("Exiting...")
            break
        else:
            print("Invalid choice. Please choose again.")

if __name__ == "__main__":
    main()
