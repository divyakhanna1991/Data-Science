Ques 1-

import pandas as pd
import matplotlib.pyplot as plt
data = pd.read_csv('crop.csv')

plt.scatter(data['Rainfall'], data['Yield'], alpha=0.5)
plt.title('Yield vs Rainfall for Different Crops')
plt.xlabel('Rainfall')
plt.ylabel('Yield')
plt.grid(True)
plt.show()

plt.hist(data['Customer Age'], bins=20, color='skyblue', edgecolor='black')
plt.title('Distribution(Frequency)of Customer Ages')
plt.xlabel('Age')
plt.ylabel('Frequency')
plt.grid(True)
plt.show()

for crop in data['Crop'].unique():
    crop_sub= data[data['Crop'] == crop]
    plt.plot(crop_sub['Year'], crop_sub['Yield'], label=crop)
plt.title('Trend in Crop Yield')
plt.xlabel('Year')
plt.ylabel('Yield')
plt.legend()
plt.grid(True)
plt.show()

Ques 2-

class ToDo:
    def _init_(self):
        self.tasks = []

    def menu(self):
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Delete Task")
        print("4. Exit")

    def add(self, task):
        self.tasks.append(task)
        print("Task added successfully.")

    def view(self):
        if not self.tasks:
            print("No tasks available.")
        else:
            print("Tasks:")
            for index, task in enumerate(self.tasks, start=1):
                print(f"{index}. {task}")

    def delete_task(self, index):
        if index < 1 or index > len(self.tasks):
            print("Invalid task index.")
        else:
            del self.tasks[index - 1]
            print("Task deleted successfully.")

to_do_list = ToDo()

while True:
    to_do_list.menu()
    choice = input("Enter your choice: ")

    if choice == '1':
        task = input("Enter task: ")
        to_do_list.add(task)
    elif choice == '2':
        to_do_list.view()
    elif choice == '3':
        index = int(input("Enter task index to delete: "))
        to_do_list.delete_task(index)
    elif choice == '4':
        print("Exiting program...")
        break
    else:
        print("Invalid choice. Please try again.")
